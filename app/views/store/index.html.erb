<h1>Store</h1>


<%= link_to("Recent", recent_path) %>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Serial number</th>
    </tr>
  </thead>

  <tbody>
        <% @products.each do |product| %>
            <tr>
              <td><%= product.title %></td>
              <td><%= product.description %></td>
              <td><%= number_to_currency(product.price, precision: 0) %></td>
              <td><%= product.serial_number %></td>
            </tr>

        <% end %>

  </tbody>
</table>