<%= link_to("Go to Homepage", root_path) %>

<table class = "table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Serial number</th>
    <th>Created at</th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= number_to_currency(product.price, precision: 0) %></td>
        <td><%= product.serial_number %></td>
        <td><%= distance_of_time_in_words_to_now(product.created_at) %></td>
      </tr>

  <% end %>

  </tbody>
</table>